{#
  Pagination!
  pagination_title: String: The name of the pagination item for screen readers.
  pagination_size (optional): String: sm | lg: The size of the pagination
  page_icon: Boolean: Pagination uses icons for Previous and Next links.
  page_items: Array: The set if page links to display.
#}
{% set pagination_classes = [
  'pagination',
  pagination_size ? 'pagination-' ~ pagination_size,
  pagination_other_classes,
] | sort | join(' ') | trim %}
<nav aria-label="{{ pagination_title }}">
	<ul class="{{ pagination_classes }}">
		<li class="page-item">
			<a class="relative block py-2 px-3 -ml-px leading-normal text-blue bg-white border border-grey no-underline hover:text-blue-darker hover:bg-grey-light" href="#" aria-label="{{ 'Previous'|t }}">
				{% if page_icon %}
					<span aria-hidden="true">&laquo;</span>
				{% endif %}
				<span {{ (page_icon) ? 'class=""' }}>{{ 'Previous'|t }}</span>
			</a>
		</li>
		{% for item in page_items %}
			<li class="page-item">
				<a class="relative block py-2 px-3 -ml-px leading-normal text-blue bg-white border border-grey no-underline hover:text-blue-darker hover:bg-grey-light" href="{{ item.link }}">{{ item.title }}</a>
			</li>
		{% endfor %}
		<li class="page-item">
			<a class="relative block py-2 px-3 -ml-px leading-normal text-blue bg-white border border-grey no-underline hover:text-blue-darker hover:bg-grey-light" href="#" aria-label="{{ 'Next'|t }}">
				{% if page_icon %}
					<span aria-hidden="true">&raquo;</span>
				{% endif %}
				<span {{ (page_icon) ? 'class=""' }}>{{ 'Next'|t }}</span>
			</a>
		</li>
	</ul>
</nav>
