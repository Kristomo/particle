{% embed '@atoms/grid/_grid-1-up.twig' %}
	{% set container = true %}
	{% block column_1 %}
		<h1 class="mb-3">Breadcrumbs</h1>
		<div class="mb-3 p-3 bg-grey-lightest border border-grey rounded">
			<p class="text-lg font-light">Indicate the current page's location within a navigational hierarchy that automatically adds separators via CSS. Breadcrumbs take an array and render each as a list item. You can set the items in
				<code>breadcrumbs.yml</code>.
					Separators are automatically added in CSS through
				<code>::before</code>
				and
				<code>::content</code>.</p>
		</div>
		<hr>
		{% include '@atoms/breadcrumb/_breadcrumb.twig' with demo_1 %}
		{% include '@atoms/breadcrumb/_breadcrumb.twig' with demo_2 %}
		{% include '@atoms/breadcrumb/_breadcrumb.twig' with demo_3 %}
	{% endblock column_1 %}
{% endembed %}
