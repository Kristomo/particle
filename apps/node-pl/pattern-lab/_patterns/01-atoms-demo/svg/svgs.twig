			<th scope="row" class="whitespace-no-wrap">
				<a href="#svg-raw">Inline
																																              SVG:<br>Raw Change Color</a>
			</th>
			<td>
				<pre><code class="language-twig"></code></pre>
			{% endverbatim %}
			{% include '@atoms/svg/_svg.twig' with {
  svg: {
    svgpath: '@atoms/svg/svg/person.svg',
  }
} %}
			{% verbatim %}
			</td>
		</tr>
	</td>
	<td>
		<div class="text-center">
			<span style="width: 50%;">
				{% include '@atoms/svg/_svg.twig' with {
                    svg: {
                      svgpath: '@atoms/svg/svg/person.svg',
                    },
                    svg_classes: ['color-fill--primary'],
                  } %}
			</span>
		</div>
	</td>
