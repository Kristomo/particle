#}

<div class="container">
	<div class="row">
		<div class="col">
			<h1 class="mb-3">Breakpoints</h1>
			<div class="mb-3 p-3 bg-light border border-secondary rounded">
				<p class="lead">Demonstration of breakpoints.
					<code>$grid-breakpoints</code>
				</p>
			</div>
			<hr>
		</div>
	</div>
</div>

<div class="sg-breakpoints">
	<ul class="breakpoints">
		{% for bp, value in cssBreakpoints %}
			<li style="left: {{ value }}">
				<span class="label">{{ bp }}:<br/>{{ value }}</span>
			</li>
		{% endfor %}
	</ul>
	<ul class="device_widths">
		{% for device in device_widths %}
			<li style="width: {{ device.width }}px;">
				<span class="label">{{ device.name }}:
					{{ device.width }}px</span>
			</li>
		{% endfor %}
	</ul>
</div>
