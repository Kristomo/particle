{#
/**
 * @file Colors!
 *
 * Available variables:
 * - cssColors: [array] Provided from data as a list of color values.
 *
 */
#}


<div class="container mx-auto">
	<div class="flex flex-wrap">
		<div class="flex-grow">
			<h1 class="mb-3">Colors</h1>
			<div class="mb-3 p-3 bg-gray-100 border border-black border-lg">
				<p class="text-base">To override the default color palette, you can do so using the theme.colors section of your tailwind.config.js file.</p>
				<div>
					<a href="https://tailwindcss.com/docs/customizing-colors/" target="_blank" rel="noopener noreferrer" class="block text-blue-500 text-sm mt-2">Tailwind Documentation</a>
				</div>
			</div>
			<hr>
		</div>
	</div>
	<div class="flex flex-wrap">
    {#  todo: dont repat yo'self #}
    {% for colorName, colorValue in tokens.colors %}
      {% if colorValue is iterable %}
        {% for nestedColor, nestedValue in colorValue %}
          {% set colorClass = 'bg-' ~ colorName ~ '-' ~ nestedColor %}
          <div class="w-2/6 p-4">
            <div class="{{ colorClass }} rounded-lg shadow-inner text-center py-2">
              <div>{{ colorName ~ ' ' ~ nestedColor }}</div>
              <div>{{ nestedValue }}</div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="w-2/6 p-4">
          <div class="bg-{{ colorName }} rounded-lg shadow-inner text-center py-2">
            <div class="{{ colorName == 'black' ? 'text-white' }}">{{ colorName }}</div>
            <div>{{ colorValue }}</div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
	</div>
  <br>
	<h2>Text Color</h2>
  <p>Control the text color of an element using the <code>.text-{color}</code> utilities.</p>
  <br>
	<h2>Background Colors</h2>
  <p>Control the background color of an element using the <code>.bg-{color}</code> utilities.</p>
</div>
